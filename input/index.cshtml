Order: 0
ArchiveSources: => GetString("PostSources")
ArchiveDestination: >
  => GetInt("Index") <= 1 ? $"index.html" : $"page/{GetInt("Index")}.html"
ArchivePageSize: 10
ArchiveOrderKey: LastUpdate
ArchiveOrderDescending: true
ArchiveTitle: => GetString("Title")
---
@section Header {
    <header class="masthead" style="background-image: url(/images/charlie-and-ward.jpg)">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
        <div class="col-md-12">
            <div class="site-heading">
            <h2>It's the Tests</h2>
            <hr class="small"/>
            <span class="subheading">
                This is my technical blog. After experimenting with a single site for both my
                personal and software-related posts, I have returned to using separate sites.
            </span>
            </div>
        </div>
        </div>
    </div>
    </header>
}

<div class="container-sm-height">
    <div class="row row-sm-height">
        <div class="col-md-9 right-border col-sm-height">
            @Html.Partial("/_posts.cshtml", Document)
        </div>
        <div class="col-md-3 mt-4 mt-md-0 col-sm-height">
            @Html.Partial("/_sidebar.cshtml", Document)
        </div>
    </div>
</div>